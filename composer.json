{
  "name": "lyre/lyre",
  "description": "A beautiful, modular Laravel package for rapid CRUD development with clean architecture",
  "keywords": [
    "php",
    "github",
    "laravel",
    "Open Source",
    "lyre",
    "crud",
    "relationships",
    "resources",
    "simple",
    "modular",
    "clean-architecture",
    "laravel 10",
    "laravel 11",
    "laravel 12"
  ],
  "license": "MIT",
  "version": "2.0.0",
  "autoload": {
    "files": [
      "src/helpers/helpers.php"
    ],
    "psr-4": {
      "Lyre\\": "src/"
    }
  },
  "authors": [
    {
      "name": "kigathi-chege",
      "email": "chegekigathi@gmail.com"
    }
  ],
  "require": {
    "php": "^8.2",
    "laravel/framework": "^10.0 || ^11.0 || ^12.0",
    "laravel/tinker": "^2.9",
    "spatie/laravel-activitylog": "^4.8",
    "spatie/laravel-permission": "^6.4",
    "filament/filament": "^3.0"
  },
  "require-dev": {
    "orchestra/testbench": "^8.0",
    "phpunit/phpunit": "^10.0"
  },
  "autoload-dev": {
    "psr-4": {
      "Lyre\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Lyre\\Providers\\LyreServiceProvider"
      ]
    }
  }
}
